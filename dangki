    <script > 
    document.addEventListener("DOMContentLoaded", function () {
        const sendOtpBtn = document.getElementById('sendOtpBtn');
        const otpInput = document.getElementById('otp');
        const phoneInput = document.getElementById('phone');
        const form = document.getElementById('registerForm');
    
        // Mô phỏng chức năng gửi mã OTP
        sendOtpBtn.addEventListener('click', function () {
            const phoneNumber = phoneInput.value;
            if (phoneNumber === '') {
                alert('Vui lòng nhập số điện thoại hợp lệ.');
                return;
            }
    
            // Giả lập gửi mã OTP
            console.log(`Đang gửi mã OTP tới số điện thoại: ${phoneNumber}`);
    
            // Sau khi gửi mã OTP, cho phép người dùng nhập OTP
            otpInput.disabled = false;
            alert('Mã OTP đã được gửi tới số điện thoại của bạn!');
        });
    
        // Xử lý đăng ký khi người dùng nhấn 'Đăng ký'
        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Ngăn form gửi dữ liệu thực tế (vì chưa có backend)
    
            const phoneNumber = phoneInput.value;
            const otp = otpInput.value;
            const password = document.getElementById('password').value;
    
            if (otp === '') {
                alert('Vui lòng nhập mã OTP.');
                return;
            }
    
            if (password.length < 6) {
                alert('Mật khẩu phải có ít nhất 6 ký tự.');
                return;
            }
    
            // Giả lập kiểm tra OTP và đăng ký thành công
            console.log(`Đang đăng ký với số điện thoại: ${phoneNumber}, OTP: ${otp}, Mật khẩu: ${password}`);
            alert('Đăng ký thành công!');
        });
    });
    </script>

